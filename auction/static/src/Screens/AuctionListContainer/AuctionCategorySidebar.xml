<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="auction.AuctionCategorySidebar" owl="1">
        <div class="col-2 o_category_list text-center mt-4" t-ref="category_element">
            <div class="auction_category active" data-id="all" t-on-click="onClickCategory">
                <span>All</span>
            </div>
            <div t-foreach="props.categories" t-as="category" t-key="category.id" class="auction_category" t-att-data-id="category.id" t-on-click="onClickCategory">
                <span t-out="category.name"></span>
            </div>
        </div>
    </t>
</templates>
